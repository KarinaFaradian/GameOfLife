{
  "devDependencies": {
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-css": "^0.6.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "lint": "prettier --check src && eslint src --ext .js,.ts && stylelint \"**/*.scss\"",
    "lint:fix": "prettier --write src && eslint src --fix --ext .js,.ts && stylelint \"**/*scss\" --fix",
    "build-dev": "webpack",
    "start": "webpack serve",
    "build": "webpack --node-env=production",
    "clear": "rd /s /q dist",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  }
}
